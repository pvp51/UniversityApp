<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dbms.controller.RootLayoutController">
   <center>
      <BorderPane prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleStudentRegistration" text="Student Registration" />
                        <MenuItem mnemonicParsing="false" onAction="#handleClassList" text="ClassList Generation" />
                    <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <center>
            <SplitMenuButton fx:id="splitButton" mnemonicParsing="false" text="Select One" BorderPane.alignment="CENTER">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleStudentRegistration" text="Student Registration" />
                <MenuItem mnemonicParsing="false" onAction="#handleClassList" text="ClassList Generation" />
              </items>
            </SplitMenuButton>
         </center>
      </BorderPane>
   </center>
</BorderPane>
